{
    "displayName": "Lutron Caseta LEAP",
    "name": "homebridge-lutron-caseta-leap",
    "version": "2.6.0",
    "description": "Support for the Lutron Caseta Smart Bridge 2",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git://github.com/thenewwazoo/homebridge-lutron-caseta-leap.git"
    },
    "bugs": {
